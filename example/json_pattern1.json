{
  "mcpServers": {
    "TodoApplication": {
      "command": "uv",
      "args": [
        "--directory", 
        "/絶対パス/TaskMateAI",
        "run",
        "TaskMateAI"
      ],
      "env": {},
      "alwaysAllow": [
        "get_tasks", "get_next_task", "create_task", "update_progress", 
        "complete_task", "add_subtask", "update_subtask", "list_agents", "list_projects"
      ],
      "defaultArguments": {
        "agent_id": "agent_123",  // すべてのリクエストに自動的に含まれる
        "project_name": ""       // 空のプロジェクト名をデフォルトで設定
      }
    }
  }
}